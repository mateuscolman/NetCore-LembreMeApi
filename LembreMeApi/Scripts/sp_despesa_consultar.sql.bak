DELIMITER $$

create procedure sp_despesa_consultar(
	pIdUsuario varchar(50),
	baixado int,
    pVencimento date
)
begin
	if (baixado = 1)
	then
	select 
		id, 
		dataPagamento, 
		titulo, 
		vencimento, 
		valor
	from 
		despesa
	where
		idUsuario = pIdUsuario	
        and month(vencimento) = month(pVencimento);
	else
	select 
		id, 
		titulo, 
		vencimento, 
		valor
	from 
		despesa
	where
		idUsuario = pIdUsuario
        and month(vencimento) = month(pVencimento)
		and baixado = 0;
	end if;
end $$

DELIMITER ;